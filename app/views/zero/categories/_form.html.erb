<div class="container col-md-6">
  <%= form_with(model: category, url: category.persisted? ? zero_category_path(category) : zero_categories_path, local: true) do |form| %>
    <% if category.errors.any? %>
      <div id="error_explanation">
        <h2><%= pluralize(category.errors.count, "error") %> prohibited this category from being saved:</h2>

        <ul>
        <% category.errors.full_messages.each do |message| %>
          <li><%= message %></li>
        <% end %>
        </ul>
      </div>
    <% end %>
    <div class="form-group">
      <%= form.label :name, class: 'control-label' %>
      <%= form.text_field :name, class: 'form-control' %>
    </div>
    <div class="form-group">
      <%= form.label :cover, class: 'control-label' %>
      <%= form.file_field :cover, class: 'form-control' %>
    </div>
    <% if category.cover.present?%>
      <%= image_tag(url_for(category.cover)) %>
    <% end %>
    <div class="form-group">
      <%= form.submit 'Submit', class: 'btn btn-primary btn-lg' %>
    </div>
  <% end %>
</div>
