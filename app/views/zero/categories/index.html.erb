<div class="container" style="display: block">
  <p id="notice"><%= notice %></p>

  <h1>Categories</h1>
  <br>
  <table>
    <thead>
      <tr>
        <th>Name</th>
        <th>Operations</th>
      </tr>
    </thead>

    <tbody>
      <% @categories.each do |category| %>
        <tr>
          <td><%= category.name%><td>
          <td><%= link_to 'Edit', edit_zero_category_path(category) %>
            <%= link_to 'Destroy', zero_category_path(category), method: :delete, data: { confirm: 'Are you sure?' } %></td>
        </tr>
      <% end %>
    </tbody>
  </table>

  <br>

  <%= link_to 'New Category', new_zero_category_path, class: 'btn btn-primary' %>
</div>