<p id="notice"><%= notice %></p>

<h1>Comments</h1>

<table>
  <thead>
    <tr>
      <th colspan="1"></th>
      <th>User</th>
      <th>Operations</th>
    </tr>
  </thead>

  <tbody>
    <% @comments.each do |comment| %>
      <tr>
        <th colspan="1"></th>
        <td><%= comment.user.name %></td>
        <td><%= link_to 'Show', zero_comment_path(comment) %></td>
        <td><%= link_to 'Edit', edit_zero_comment_path(comment) %></td>
        <td><%= link_to 'Destroy', zero_comment_path(comment), method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>
