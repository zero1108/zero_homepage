<p id="notice"><%= notice %></p>

<h1>Categories</h1>

<table>
  <thead>
    <tr>
      <th colspan="3"></th>
      <td>Name<td>
      <td>Operations<td>
    </tr>
  </thead>

  <tbody>
    <% @categories.each do |category| %>
      <tr>
        <th colspan="3"></th>
        <td><%= category.name%><td>
        <td><%= link_to 'Edit', edit_zero_category_path(category) %></td>
        <td><%= link_to 'Destroy', zero_category_path(category), method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

