<div class="blog-body">
  <div class="blog-show">
    <nav aria-label="breadcrumb">
      <ol class="breadcrumb">
        <li class="breadcrumb-item"><%= link_to 'ZeroHome', root_path%></li>
        <li class="breadcrumb-item"><%= link_to 'Blogs', blogs_path%></li>
        <li class="breadcrumb-item active" aria-current="page"><%= @blog.title %></li>
      </ol>
    </nav>

    <% if notice %>
      <p id="notice" class="alert alert-success"><%= notice %></p>
    <% elsif alert %>
      <p id="notice" class="alert alert-danger"><%= alert %></p>
    <% end %>

    <h1 class="title"><%= @blog.title %></h1>
    <p class="blog-footer">
      <%= fa_icon "tag", class: "align-middle" %>
      <span class="blog-category"><%= @blog.category.name%></span>
    </p>
    <div id="blog-content" class="markdown-body">
    </div>
    <div class="blog-comment">
      <%= render 'comment_block'%>
    </div>
  </div>

<%= render 'right_block'%>

</div>
<script>
  var target = document.getElementById("blog-content");
  showMDContent(`<%= @blog.content.html_safe %>`, target);
</script>